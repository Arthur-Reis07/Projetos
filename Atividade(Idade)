//Início
int idadeDias, anos, meses, dias;

Console.WriteLine("Digite uma idade em dias: ");
idadeDias = Convert.ToInt32(Console.ReadLine());

// Calcular anos
anos = idadeDias / 365;
idadeDias = idadeDias % 365;

// Calcular meses
meses = idadeDias / 30;
idadeDias = idadeDias % 30;

// Dias restantes
dias = idadeDias;

Console.WriteLine("Sua idade é: " + anos + " ano(s), " + meses + " mês(es), " + dias + " dia(s)");
//Fim
