//Início
int IdadeDias, anos, meses, dias;
Console.WriteLine("Digite uma idade em dias:");
IdadeDias =Convert.ToInt32(Console.ReadLine());
anos = IdadeDias / 365;
IdadeDias = IdadeDias - anos * 365;
meses = IdadeDias / 30;
IdadeDias = IdadeDias - meses * 30;
dias = IdadeDias;
Console.WriteLine("Sua idade é aproximadamente: " + anos +"ano(s)," + meses+"mês(es)," +dias+"dia(s)");
//Fim
